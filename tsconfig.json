{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@charles-explorer/prisma": ["packages/prisma"],
            "@charles-explorer/solr-client": ["packages/solr-client"],
        },
        "esModuleInterop": true,
        "lib": ["ES2023"],
        "allowJs": true,
        "skipLibCheck": true,
        "resolveJsonModule": false,
        "emitDecoratorMetadata": false,
        "declaration": true,
    },
    "exclude": [
        "**/node_modules",
        "**/dist"
    ],
}